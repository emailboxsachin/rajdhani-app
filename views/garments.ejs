
<%- include header.ejs %> 
      <div class="row"> 
          <div class="col-11">      
              <form class="form-inline" action="/garmentFind" method="post">
                  <div class="form-group mx-sm-3 mb-2">                    
                    <input type="text" class="form-control pull-right" name="search" 
                    placeholder="search">
                  </div>
                  <button type="submit" class="btn btn-primary mb-2">Search</button>
              </form>
          </div>
          <div class="col-1">
            <a href="/create" class="btn btn-primary mb-2">New</a> 
          </div>
      </div>
      <div class="row"> 
        <div class="col-5">
          <% if(garments.length>0) { %>
              <% for(var i=0; i<garments.length;i++) { %>
                <div class="card ">
                    <div class="card-header">
                      <a href="/addToBill/<%= garments[i].searchCode%>" class="btn btn-primary pull-right">
                        <h5 class="card-title"><%= garments[i].name%></h5>
                      </a>                        
                    </div>
                    <div class="card-body">                        
                        <p class="card-text">garmentType : <%= garments[i].garmentType%></p>
                        <p class="card-text">purchasePrice : <%= garments[i].purchasePrice%></p>
                        <p class="card-text">purchaseQuantity : <%= garments[i].purchaseQuantity%></p>
                        <p class="card-text">salePrice : <%= garments[i].salePrice%></p>
                        <p class="card-text">code : <%= garments[i].code%></p>
                        <p class="card-text">Search Code : <%= garments[i].searchCode%></p>
                        
                    </div>
                </div>
                <br>            
              <% } %>
            </tbody>
          </table>
          <% } else { %>
            <div>no garments found.</div>
          <% } %>
        </div>
        <div class="col-7">
            <div class="card ">
                <div class="card-header">
                    <h5 class="card-title">Bill</h5>
                    <form class="form-inline" action="/makeBill" method="post">
                      <div class="row"> 
                        <div class="col-4">
                          <input type="text" class="form-control pull-right" name="name" 
                          placeholder="name">
                        </div>
                        <div class="col-4">                    
                            <input type="text" class="form-control pull-right" name="mobile" 
                            placeholder="mobile">
                        </div>
                        <div class="col-4">     
                        <button type="submit" class="btn btn-primary mb-2">Finalise Bill</button>
                        </div>
                      </div>
                  </form>
                </div>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      Silk
                      <span class="badge badge-primary badge-pill">14</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      synthetic
                      <span class="badge badge-primary badge-pill">2</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                      kurti
                      <span class="badge badge-primary badge-pill">1</span>
                    </li>
                </ul>
            </div>
        </div>
      </div>


<%- include footer.ejs %> 
